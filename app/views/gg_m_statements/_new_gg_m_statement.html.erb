<% if order == 2 %>
	<div id="digitale_gg_m_statement_1" style="width: 95%; display: flex; flex-direction: column; justify-content: space-around; align-items: center; margin-top: 3vh;">
		<div>I</div>
		<div>m i g h t ||| m i g h t | n o t</div>
		<div class="gg-input" style="display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 0px 1vw;"><%= digitale.gg_m_statements.select { |ggms| ggms.order == 1}.sample.title %></div>
	</div>
<% else %>
	<div id="digitale_gg_m_statement_<%= previous_order.to_s%>" style="width: 100%; display: flex; flex-direction: column; justify-content: space-around; align-items: center;">
		<div><%= chapters[previous_order] %></div>
		<div>m i g h t ||| m i g h t | n o t</div>
		<div class="gg-input" style="display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 0px 1vw;"><%= digitale.gg_m_statements.select { |ggms| ggms.order == previous_order }.sample.title %></div>
	</div>
<% end %>

<% if order < 8 %>
	<div id="digitale_new_gg_m_statement_<%= order.to_s %>" style="width: 100%; display: flex; flex-direction: column; justify-content: space-around; align-items: center;">
		<%= form_for gg_m_statement, method: 'create', remote: true do |f| %>
			<div style="width: 100%; display: flex; flex-direction: column; justify-content: space-around; align-items: center;">
				<%= f.hidden_field :digitale_id, value: digitale.id %>
				<%= f.hidden_field :order, value: order %>
				<div><%= chapter %></div>
				<%= label_tag(:title, 'm i g h t ||| m i g h t | n o t', style: 'color: white;') %>
				<%= f.text_area :title, class: 'gg-input', style: 'height: 12vh;' %>
				<%= f.submit 'n e x t', class: 'gg-button-secondary' %>
			</div>
		<% end %>
	</div>
	<% if order == 4 %>
		<div class='gg-button-secondary'>l a u n c h</div>
	<% end %>
<% end %>
